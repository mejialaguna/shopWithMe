{
  "env": {
    "browser": true,
    "commonjs": true,
    "es2021": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:@typescript-eslint/recommended",
    "plugin:react/recommended",
    "plugin:react-hooks/recommended",
    "next",
    "next/core-web-vitals"
  ],
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    }
  },
  "plugins": ["@typescript-eslint", "react"],
  "rules": {
    "quotes": ["error", "single"],
    "react/react-in-jsx-scope": 0,
    "react/display-name": 0,
    "import/no-anonymous-default-export": 0,
    "max-len": [
      "error",
      {
        "code": 140,
        "ignorePattern": "^\\s*//\\s*\\d+$",
        "ignoreComments": true
      }
    ],
    "no-console": "error"
  },
  "settings": {
    "react": {
      "version": "detect"
    }
  }
}
